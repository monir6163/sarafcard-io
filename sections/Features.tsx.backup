          <circle cx="11" cy="18" r="1" fill="rgba(255,255,255,0.4)" />
          <rect x="5" y="2" width="12" height="18" rx="2" fill="none" stroke="rgba(255,255,255,0.4)" strokeWidth="1" />
        </svg>
      );
    case 'shield':
      return (
        <svg className={className} viewBox="0 0 24 24" style={iconStyle}>
          {gradientDefs}
          <path d="M13 3l8 4.5v6.5c0 5.5-3.84 10.74-9 12-5.16-1.26-9-6.5-9-12V7.5L13 3z" fill={`url(#${shadowId})`} transform="translate(1,1)" />
