        </svg>
      );
    case 'zap':
      return (
        <svg className={className} viewBox="0 0 24 24" style={iconStyle}>
          {gradientDefs}
          <polygon points="14,3 4,15 12,15 11,23 21,11 13,11" fill={`url(#${shadowId})`} transform="translate(1,1)" />
          <polygon points="13,2 3,14 11,14 10,22 20,10 12,10" fill={`url(#${gradientId})`} />
          <polygon points="13,2 8,8 11,8 10,14 15,8 12,8" fill="rgba(255,255,255,0.4)" />
        </svg>
