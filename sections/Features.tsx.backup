          {gradientDefs}
          <rect x="6" y="3" width="12" height="18" rx="2" fill={`url(#${shadowId})`} transform="translate(1,1)" />
          <rect x="5" y="2" width="12" height="18" rx="2" fill={`url(#${gradientId})`} />
