        <svg className={className} viewBox="0 0 24 24" style={iconStyle}>
          {gradientDefs}
          <path d="M7 3h10l4 4-9 14L3 7l4-4z" fill={`url(#${shadowId})`} transform="translate(1,1)" />
          <path d="M6 2h10l4 4-8 14L2 6l4-4z" fill={`url(#${gradientId})`} />
